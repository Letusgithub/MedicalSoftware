<%- include('../partials/headercode.ejs') %>

    <body>

        <!-- Layout wrapper -->
        <div class="layout-wrapper layout-content-navbar  ">
            <div class="layout-container">

                <!-- sidebar imported -->
                <%- include('../partials/sidebar.ejs') %>

                    <!-- Layout container -->
                    <div class="layout-page">

                        <!-- navbar imported -->
                        <%- include('../partials/navbar.ejs') %>

                            <!-- Content wrapper -->
                            <div class="content-wrapper">

                                <!-- Content -->

                                <div class="container-xxl flex-grow-1 container-p-y">

                                    <div class="d-flex justify-content-between m-0 p-0">
                                        <h4 class="fw-bold py-3 mb-1"> Update Employee</h4>
                                        <a type="button" class="btn btn-icon btn-danger my-2 mx-3"
                                            href="/employee_master">
                                            <i class='bx bx-x bx-sm'></i>
                                        </a>
                                    </div>

                                    <hr class="mb-4">

                                    <div class="card mb-4 mx-auto col-md-8">

                                        <div class="pt-4 text-center">
                                            <h4 class="mb-0">Edit Employee Details</h4>
                                        </div>

                                        <hr>
                                        <div class="card-body">


                                            <div class="mb-3">
                                                <label class="form-label" for="emp_name">Employee
                                                    Name</label>
                                                <div class="input-group input-group-merge">
                                                    <span id="basic-icon-default-fullname2" class="input-group-text"><i
                                                            class="bx bx-user"></i></span>
                                                    <input type="text" class="form-control" id="emp_name" placeholder=""
                                                        name="emp_name" value="<%=data[0].emp_name %>">
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label" for="emp_reg_no"> Registration No.
                                                    <span style="font-size: 15px; color: red">*</span></label></label>
                                                <div class="input-group input-group-merge">
                                                    <span id="basic-icon-default-fullname2" class="input-group-text"><i
                                                            class="bx bx-detail"></i></span>
                                                    <input type="text" class="form-control" id="emp_reg_no" placeholder=""
                                                        name="emp_reg_no" value="<%=data[0].emp_reg_no %>" required>
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label" for="emp_mobile">Contact
                                                    No</label>
                                                <div class="input-group input-group-merge">
                                                    <span id="basic-icon-default-phone2" class="input-group-text"><i
                                                            class="bx bx-phone"></i></span>
                                                    <input type="text" id="emp_mobile" class="form-control phone-mask"
                                                        placeholder="" name="emp_mobile" value="<%=data[0].emp_mobile %>">
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label" for="emp_alt_mobile"> Alternet
                                                    Contact
                                                    No</label>
                                                <div class="input-group input-group-merge">
                                                    <span id="basic-icon-default-phone2" class="input-group-text"><i
                                                            class="bx bx-phone"></i></span>
                                                    <input type="text" id="emp_alt_mobile"
                                                        class="form-control phone-mask" placeholder=""
                                                        name="emp_alt_mobile" value="<%=data[0].emp_alt_mobile %>" >
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label" for="emp_email">Email</label>
                                                <div class="input-group input-group-merge">
                                                    <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                                                    <input type="text" id="emp_email" class="form-control"
                                                        placeholder="" name="emp_email" value="<%=data[0].emp_email %>">

                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label" for="emp_address">Address</label>
                                                <div class="input-group input-group-merge">
                                                    <span id="basic-icon-default-message2" class="input-group-text"><i
                                                            class="bx bx-address"></i></span>
                                                    <textarea id="emp_address" class="form-control" placeholder=""
                                                        name="emp_address"><%=data[0].emp_address %></textarea>
                                                </div>
                                            </div>

                                            <button type="submit" id="updateSubmit"
                                                class="btn btn-primary">Submit</button>
                                        </div>


                                    </div>


                                </div>
                                <!-- / Content -->

                                <div class="content-backdrop fade"></div>
                            </div>
                            <!-- Content wrapper -->
                    </div>
                    <!-- / Layout page -->
            </div>



            <!-- Overlay -->
            <div class="layout-overlay layout-menu-toggle"></div>


        </div>
        <!-- / Layout wrapper -->

        <%- include('../partials/footercode.ejs') %>
            <script>
                var empId = '<%= data[0].emp_id %>'

                

                $("#updateSubmit").click(function () {

                    if ($("#emp_alt_mobile").val().length < 10) {
                        return alert('Please fill valid Phone number');
                    }
                    $.ajax({
                        url: `/api/emp/${empId}/update`,
                        type: 'POST',
                        data: JSON.stringify({
                            emp_name: $("#emp_name").val(),
                            emp_mobile: $("#emp_mobile").val(),
                            emp_alt_mobile: $("#emp_alt_mobile").val(),
                            emp_email: $("#emp_email").val(),
                            emp_address: $("#emp_address").val()
                        }),
                        contentType: 'application/json',
                        success: function (response) {
                           window.location.href = "/employee_master"
                        },
                        error: function (error) {
                            console.log(error);
                        }
                    })
                })

            </script>

    </body>


    </html>