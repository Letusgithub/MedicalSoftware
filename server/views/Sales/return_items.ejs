<%- include('../partials/headercode.ejs') %>

  <body>

    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar  ">
      <div class="layout-container">

        <!-- sidebar imported -->
        <%- include('../partials/sidebar.ejs') %>


          <!-- Layout container -->
          <div class="layout-page">

            <!-- navbar imported -->
            <%- include('../partials/navbar.ejs') %>

              <!-- Content wrapper -->
              <div class="content-wrapper">


                <!-- Content -->

                <div class="container-xxl flex-grow-1 container-p-y">
                  <h4 class="fw-bold py-3 mb-1"> Create Return Invoice</h4>
                  <hr class="mb-4">
                  <form>
                    <div class="card mb-4">
                      <div class=" row">

                        <div class="col-md-6">
                          <div class="mb-4" id="custcart">

                            <h5 class="card-header pb-3">Customer Details</h5>
                            <h6 class="card-header py-2" id="customername"></h6>
                            <h6 class="card-header py-2" id="customernumber"></h6>

                          </div>
                        </div>

                        <div class="col-md-6">
                          <div class="mb-4">

                            <h5 class="card-header pb-3">Order Details</h5>
                            <h6 class="card-header py-2" id="saleinvoiceid"></h6>
                            <h6 class="card-header py-2" id="date"></h6>
                            <h6 class="card-header py-2" id="time"></h6>

                          </div>
                        </div>


                      </div>
                    </div>

                    <div class="row">
                      <div class="col-md-6">
                        <div class="card mb-4">
                          <h5 class="card-header">Return Invoice Number</h5>
                          <div class="card-body">
                            <div>

                              <input type="text" class="form-control" id="invoicenumber"
                                aria-describedby="defaultFormControlHelp" />

                            </div>
                          </div>
                        </div>
                      </div>

                      <div class="col-md-6">
                        <div class="card mb-4">
                          <h5 class="card-header">Reason</h5>
                          <div class="card-body">
                            <div>

                              <input type="text" class="form-control" id="invoicenumber"
                                aria-describedby="defaultFormControlHelp" />

                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </form>

                  <hr class="mb-4">
                </div>





                <div class="row mx-3">
                  <h4 class="fw-bold mb-4">Return Items</h4>

                  <!-- Bordered Table -->
                  <div class="bordered-table card mb-4 mx-0">

                    <form class="form-main">
                      <div class="card-body form-block">
                        <div class="table-responsive text-nowrap ">

                          <table class="table table-bordered">
                            <thead>
                              <tr>
                                <th class="col-6">Product Name</th>
                                <th class="col-5">Mfg / Mkt</th>
                                <th class="col-1">Shelf Label</th>
                              </tr>

                            </thead>
                            <tbody>
                              <tr>
                                <td>
                                  <input type="text" class="form-control" id="medicinename"
                                    placeholder="Medicine Name" />
                                </td>
                                <td>
                                  <input type="text" class="form-control" id="mfg/mkt" placeholder="Brand Name" />
                                </td>
                                <td>
                                  <input type="text" class="form-control" id="shelflabel" placeholder="" />
                                </td>
                              </tr>
                            </tbody>

                          </table>


                          <table class="table table-bordered">
                            <thead>
                              <tr>
                                <th>Batch</th>
                                <th>Exp Date</th>
                                <th>Unit</th>
                                <th>MRP</th>
                                <th>QTY</th>
                                <th>Disc %</th>
                                <th>Total</th>
                              </tr>
                            </thead>
                            <tbody>
                              <tr>

                                <td>
                                  <input type="text" class="form-control" id="batch" placeholder="" />
                                </td>

                                <td>
                                  <input class="form-control" type="date" id="expdate" />
                                </td>

                                <td>
                                  <select class="form-select" id="unit" name="unit" aria-label="unit">
                                    <option>TABS</option>
                                    <option>STP</option>
                                  </select>
                                  <p class="unit">1 strip = 20 tabs </p>
                                </td>

                                <td>
                                  <input type="text" class="form-control" id="price" placeholder="" />
                                </td>

                                <td>
                                  <input type="text" class="form-control" id="qty" placeholder="" />
                                </td>

                                <td>
                                  <input type="text" class="form-control" id="discount" placeholder="" />
                                </td>

                                <td>
                                  <input type="text" class="form-control" id="total" placeholder="" />
                                </td>
                              </tr>




                            </tbody>

                          </table>
                        </div>
                      </div>
                      <div class="buttonBox text-center pb-3">
                        <button id="addtocart" class="btn btn-primary add-more-btn" style="color: white;">Add to
                          Return Cart</button>
                        <input type="reset" class="btn btn-primary" style="color: white;" value="Clear" />
                      </div>
                    </form>

                  </div>

                  <!--/ Bordered Table -->


                  <!-- Product Cart -->
                  <div class="card mx-0">
                    <h5 class="card-header">Return Cart</h5>
                    <div class="card-body">
                      <div class="table-responsive text-nowrap">
                        <table class="table table-bordered">
                          <thead>
                            <tr>
                              <th class="col-1">#</th>
                              <th class="col-7">Product name</th>
                              <th class="col-1">Qty</th>
                              <th class="col-1">MRP</th>
                              <th class="col-1">Disc %</th>
                              <th class="col-1">Total</th>
                              <th class="col-1">Action</th>

                            </tr>
                          </thead>
                          <tbody id="cart">
                            <tr>
                              <td>1</td>
                              <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>Calpol 1000mg
                                  Tablet</strong></td>
                              <td>3</td>
                              <td>35</td>
                              <td>5</td>
                              <td>-115</td>
                              <td>
                                <div class="action-btns">
                                  <button type="button" class="btn p-0 mx-2"><i class='bx bxs-edit'></i></button>
                                  <button type="button" class="btn p-0 mx-2"><i class="bx bx-trash me-1"></i></button>
                                </div>
                              </td>
                            </tr>


                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>

                  <!-- / Product Cart -->
                </div>

                <hr>

                <div class="mx-3">
                  <h4 class="fw-bold py-3 mb-4">Return Summary</h4>

                  <div class="row d-flex justify-content-evenly">



                    <div class="col-md-4">
                      <div class="card mb-4">
                        <h5 class="card-header">Subtotal</h5>
                        <div class="card-body">
                          <div>

                            <input type="text" class="form-control" id="defaultFormControlInput"
                              aria-describedby="defaultFormControlHelp" />

                          </div>
                        </div>
                      </div>
                    </div>


                    <div class="col-md-4">
                      <div class="card mb-4">
                        <h5 class="card-header">Prev. Discount (%)</h5>
                        <div class="card-body">
                          <div>

                            <input type="text" class="form-control" id="defaultFormControlInput"
                              aria-describedby="defaultFormControlHelp" />

                          </div>
                        </div>
                      </div>
                    </div>


                    <div class="col-md-4">
                      <div class="card mb-4">
                        <h5 class="card-header">Return Amount</h5>
                        <div class="card-body">
                          <div>

                            <input type="text" class="form-control" id="defaultFormControlInput"
                              aria-describedby="defaultFormControlHelp" />

                          </div>
                        </div>
                      </div>
                    </div>

                  </div>




                </div>
                <!-- / Content -->



                <div class="text-center mb-4">
                  <a href="/invoice_template">
                    <div class="btn btn-primary px-5">Submit</div>
                  </a>
                </div>




                <div class="content-backdrop fade"></div>
              </div>
              <!-- Content wrapper -->
          </div>
          <!-- / Layout page -->
      </div>



      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>


    </div>
    <!-- / Layout wrapper -->

    <%- include('../partials/footercode.ejs') %>

    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script>
      $(document).ready(function(){

        var returnItem = JSON.parse(localStorage.getItem("selectedreturnitem"));
//getting all details of customer
        $.get(`/api/invoice?id=${returnItem.id}`, function(data, status){
          console.log(data.result);
          var customerId = data.result[0].customer_id;
          console.log(customerId);

          $.get(`/api/custdetails/${customerId}`, function(data, status){
            var customer = data.data;

            var customerName = customer.cust_name;
            var customerNumber = customer.cust_telephone;
            var salesId = `SE-${returnItem.id}`
            var date = returnItem.date;
            var time =returnItem.time;
            

            $("#customername").text(`Customer Name: ${customerName}`);
            $("#customernumber").text(`Customer No: ${customerNumber}`);
            $("#saleinvoiceid").text(`Sale Invoice No: ${salesId}`);
            $("#date").text(`Date: ${date}`);
            $("#time").text(`Time: ${time}`);

          })
        })
//end of the details logic

//rendering return cart logic

          var product=[];
          $.get(`/api/cartitems/${returnItem.id}`, function (data, status) {
            
            var items =data.data;
            
            for(let i in items){
              product.push({
                productName: items[i].product_name,
                mrp: items[i].mrp,
                qty: items[i].quantity,
                disc: items[i].unit_discount,
              });
            }
            console.log("products",product);

            $("#medicinename").autocomplete({
              source: product.map(function(data){
                return data.productName;
              }),
              select: function(event, ui){
                var selectedItem = ui.item.value;
                
              }
            })
          })

        
































      })


    </script>










  </body>


  </html>





