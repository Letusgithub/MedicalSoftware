                                </td>
                              </tr>
                            </tbody>

                          </table>


                          <table class="table table-bordered">
                            <thead>
                              <tr>
                                <th>Batch</th>
                                <th>Exp Date</th>
                                <th>Unit</th>
                                <th>MRP</th>
                                <th>QTY</th>
                                <th>Disc %</th>
                                <th>Total</th>
                              </tr>
                            </thead>
