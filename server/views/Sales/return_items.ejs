                          <tbody id="cart">
                            <!-- <tr>
                              <td>1</td>
                              <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>Calpol 1000mg
                                  Tablet</strong></td>
                              <td>3</td>
                              <td>35</td>
