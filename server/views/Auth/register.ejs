<%- include('../partials/headercode.ejs') %>

    <body>

        <!-- Content -->

        <div class="container-xxl">
            <div class="authentication-wrapper authentication-basic container-p-y">
                <div class="authentication-inner">

                    <!-- Register Card -->
                    <div class="card">
                        <div class="card-body">
                            <!-- Logo -->
                            <div class="app-brand justify-content-center">
                                <a href="" class="app-brand-link gap-2">
                                    <span class="app-brand-logo demo">



                                    </span>
                                    <span class="app-brand-text demo text-body fw-bolder">Dawa.ai</span>
                                </a>
                            </div>
                            <!-- /Logo -->
                            <h4 class="mb-2">Welcome to Dawa.ai! ðŸ‘‹</h4>
                            <p class="mb-4">Make your app management easy and fun!</p>

                            <form id="registerForm" class="mb-3" method="POST" action="/api/auth/register">

                                <div class="mb-3">
                                    <label for="org_telephone" class="form-label">Mobile No.</label>
                                    <input type="number" class="form-control" id="org_telephone" name="org_telephone"
                                        placeholder="Enter 10-digit mobile no." required>
                                </div>

                                <div class="mb-3">
                                    <label for="owner_name" class="form-label">Owner Name</label>
                                    <input type="text" class="form-control" id="owner_name" name="owner_name"
                                        placeholder="Enter owner name" autofocus="" required>
                                </div>

                                <div class="mb-3">
                                    <label for="org_name" class="form-label">Pharmacy Name</label>
                                    <input type="text" class="form-control" id="org_name" name="org_name"
                                        placeholder="Enter your pharmacy name" autofocus="" required>
                                </div>

                                <div class="mb-3">
                                    <label for="org_gstin" class="form-label">GSTIN</label>
                                    <input type="text" class="form-control" id="org_gstin" name="org_gstin"
                                        placeholder="Enter GSTIN" autofocus="" required>
                                </div>

                                <div class="mb-3">
                                    <label for="org_gstin" class="form-label">Pincode</label>
                                    <input type="text" class="form-control" id="org_pincode" name="org_pincode"
                                        placeholder="Enter shop pincode" autofocus="" required>
                                </div>


                                <div class="mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="terms-conditions"
                                            name="terms" required>
                                        <label class="form-check-label" for="terms-conditions">
                                            I agree to
                                            <a href="javascript:void(0);">privacy policy &amp; terms</a>
                                        </label>
                                    </div>
                                </div>
                                <button class="btn btn-primary d-grid w-100" type="submit">
                                    Get OTP
                                </button>
                            </form>

                            <p class="text-center">
                                <span>Already have an account?</span>
                                <a href="/login">
                                    <span>Sign in instead</span>
                                </a>
                            </p>
                        </div>
                    </div>
                    <!-- Register Card -->
                </div>
            </div>
        </div>

        <!-- / Content -->



