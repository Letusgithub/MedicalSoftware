
<%- include('../partials/headercode.ejs') %>



<body>

    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar  ">
      <div class="layout-container">

        <!-- sidebar imported -->
        <%- include('../partials/sidebar.ejs') %>

          <!-- Layout container -->
          <div class="layout-page">

            <!-- navbar imported -->
            <%- include('../partials/navbar.ejs') %>

              <!-- Content wrapper -->
              <div class="content-wrapper">

                <!-- Content -->

                <div class="container-xxl flex-grow-1 container-p-y">

                  <div class="d-flex justify-content-between m-0 p-0">
                    <h4 class="fw-bold py-3 mb-1"> Update Product Details</h4>
                    <button type="button" class="btn btn-icon btn-danger my-2 mx-3" onclick="history.back()">
                      <i class='bx bx-x bx-sm'></i>
                    </button>
                  </div>

                  <hr class="mb-4">

                  <div class="card mb-4 mx-auto col-md-10">

                    <div class="card-body ">
                      <form action="/product/<%= data[0].product_id %>" method="post" >

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname" >Product Name</label>
                            <div class="col-sm-10">
                              <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i
                                    class="bx bx-user"></i></span>
                                <input type="text" class="form-control" id="basic-icon-default-fullname"
                                  placeholder="John Doe" aria-label="John Doe"
                                  aria-describedby="basic-icon-default-fullname2" name="product_name" value=<%= data[0].product_name %> >
                              </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                          <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname" >MFG</label>
                          <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                              <span id="basic-icon-default-fullname2" class="input-group-text"><i
                                  class="bx bx-user"></i></span>
                              <input type="text" class="form-control" id="basic-icon-default-fullname"
                                placeholder="John Doe" aria-label="John Doe"
                                aria-describedby="basic-icon-default-fullname2" name="mfg" value=<%= data[0].mfg %> >
                            </div>
                          </div>
                        </div>

                        <div class="row mb-3">
                          <label class="col-sm-2 col-form-label" for="basic-icon-default-address">MKT</label>
                          <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                              <span class="input-group-text"><i class="bx bx-building"></i></span>
                              <input type="text" id="basic-icon-default-address" class="form-control" 
                                placeholder="address" aria-label="address"
                                aria-describedby="basic-icon-default-address2" name="mkt" value=<%= data[0].mkt %>>

                            </div>

                          </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-email">Salt Composition</label>
                            <div class="col-sm-10">
                              <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                                <input type="text" id="basic-icon-default-email" class="form-control"
                                  placeholder="john.doe" aria-label="john.doe"
                                  aria-describedby="basic-icon-default-email2" name="salt" value=<%= data[0].salt %>>
                                
                              </div>
  
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-email">HSN</label>
                            <div class="col-sm-10">
                              <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                                <input type="text" id="basic-icon-default-email" class="form-control"
                                  placeholder="john.doe" aria-label="john.doe"
                                  aria-describedby="basic-icon-default-email2" name="hsn" value=<%= data[0].hsn %>>
                               
                              </div>
  
                            </div>
                        </div>

                        <div class="row mb-3">
                          <label class="col-sm-2 col-form-label" for="basic-icon-default-email">Category</label>
                          <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                              <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                              <input type="text" id="basic-icon-default-email" class="form-control"
                                placeholder="john.doe" aria-label="john.doe"
                                aria-describedby="basic-icon-default-email2" name="category" value=<%= data[0].category %>>
                              
                            </div>

                          </div>
                        </div>

                        <div class="row mb-2">
                            <label class="col-sm-2 col-form-label"
                                for="basic-icon-default-address">Unit</label>
                            <div class="col-sm-4 me-0">
                                <div class="input-group input-group-merge">
                                    <input type="text" class="form-control"
                                        id="basic-icon-default-companyname" placeholder=""
                                        aria-label=""
                                        aria-describedby="basic-icon-default-companyname2" name="primary_unit" value=<%= data[0].primary_unit%>>
                                    <select class="form-select" id="exampleFormControlSelect1"
                                        aria-label="Default select example">
                                        <option selected>Primary</option>
                                        <option value="1">AMP (Ampoules)</option>
                                        <option value="1">Box</option>
                                        <option value="1">BTL (Bottle)</option>
                                        <option value="1">BALM</option>
                                        <option value="1">CAP (Capsule)</option>
                                        <option value="1">CREAM</option>
                                        <option value="1">DROP</option>
                                        <option value="1">DRSP (Dry Syrup)</option>
                                        <option value="1">E/D (Eye Drop)</option>
                                        <option value="1">EAR/D (Ear Drop)</option>
                                        <option value="1">FW (Face Wash)</option>
                                        <option value="1">GEL</option>
                                        <option value="1">GM</option>
                                        <option value="1">INJ (Injection)</option>
                                        <option value="1">INH (Inhaler)</option>
                                    </select>
                                </div>

                            </div>

                            <div class="col-sm-1 text-center mx-0 p-0">
                                <p class="fs-4">=</p>
                            </div>

                            <div class="col-sm-4 ms-0">
                                <div class="input-group input-group-merge">
                                    <input type="text" class="form-control"
                                        id="basic-icon-default-companyname" placeholder=""
                                        aria-label=""
                                        aria-describedby="basic-icon-default-companyname2" name="secondary_unit" value=<%= data[0].secondary_unit%>>
                                    <select class="form-select" id="exampleFormControlSelect1"
                                        aria-label="Default select example">
                                        <option selected>Secondary</option>
                                        <option value="1">AMP (Ampoules)</option>
                                        <option value="1">Box</option>
                                        <option value="1">BTL (Bottle)</option>
                                        <option value="1">BALM</option>
                                        <option value="1">CAP (Capsule)</option>
                                        <option value="1">CREAM</option>
                                        <option value="1">DROP</option>
                                        <option value="1">DRSP (Dry Syrup)</option>
                                        <option value="1">E/D (Eye Drop)</option>
                                        <option value="1">EAR/D (Ear Drop)</option>
                                        <option value="1">FW (Face Wash)</option>
                                        <option value="1">GEL</option>
                                        <option value="1">GM</option>
                                        <option value="1">INJ (Injection)</option>
                                        <option value="1">INH (Inhaler)</option>
                                        <option value="1"></option>
                                        <option value="1"></option>

                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-email">Conversion</label>
                            <div class="col-sm-10">
                              <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                                <input type="text" id="basic-icon-default-email" class="form-control"
                                  placeholder="john.doe" aria-label="john.doe"
                                  aria-describedby="basic-icon-default-email2" name="conversion" value=<%= data[0].conversion %>>
                                
                              </div>
  
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-email">MRP</label>
                            <div class="col-sm-10">
                              <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                                <input type="text" id="basic-icon-default-email" class="form-control"
                                  placeholder="john.doe" aria-label="john.doe"
                                  aria-describedby="basic-icon-default-email2" name="mrp" value=<%= data[0].mrp %>>
                                
                              </div>
  
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-email">Added By</label>
                            <div class="col-sm-10">
                              <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                                <input type="text" id="basic-icon-default-email" class="form-control"
                                  placeholder="john.doe" aria-label="john.doe"
                                  aria-describedby="basic-icon-default-email2" name="addedBy" value=<%= data[0].addedBy %>>
                                
                              </div>
  
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-email">Verified</label>
                            <div class="col-sm-10">
                              <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                                <input type="text" id="basic-icon-default-email" class="form-control"
                                  placeholder="john.doe" aria-label="john.doe"
                                  aria-describedby="basic-icon-default-email2" name="verified" value=<%= data[0].verified %>>
                                
                              </div>
  
                            </div>
                        </div>



                        <div class="row justify-content-end">
                          <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary" >Update</button>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>


                </div>
                <!-- / Content -->

                <div class="content-backdrop fade"></div>
              </div>
              <!-- Content wrapper -->
          </div>
          <!-- / Layout page -->
      </div>



      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>


    </div>
    <!-- / Layout wrapper -->

