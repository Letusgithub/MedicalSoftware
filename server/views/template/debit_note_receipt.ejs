<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <style>
        .frame1 {
            width: 100%;
            height: 39rem;
            background: #FFF;
        }

        .container-receipt {
            position: relative;
            width: 50.2365rem;
            flex-shrink: 0;
            border: 0.2px solid #1E1E1E;

            padding-right: 15px;
            padding-left: 15px;
            margin-right: auto;
            margin-left: auto;
            margin-top: 3rem;
        }

        .shop-name {
            position: relative;
            display: flex;
            width: 16.20863rem;
            height: 1.2455rem;
            flex-direction: column;
            flex-shrink: 0;

            /* top: 0.05rem;
            left: 0.98rem; */

            color: #1E1E1E;
            font-size: 1.25rem;
            font-family: Poppins;
            font-style: normal;
            font-weight: 500;
            line-height: normal;
        }

        .logo-container {
            display: flex;
            width: 7.625rem;
            height: 3.5rem;
            gap: 0.13638rem;
            flex-shrink: 0;

            color: #00ACC1;
        }

        .shop-info {
            margin-top: 0.48rem;
            width: 34.413rem;
            color: #000;
            font-size: 0.625rem;
            font-family: Poppins;
            font-style: normal;
            font-weight: 400;
            line-height: 1rem;
        }

        .shop-info-child1 {
            display: flex;
            width: 12.21775rem;
            height: 2.80238rem;
            flex-direction: column;
            flex-shrink: 0;
        }

        .shop-info-child2 {
            width: 13.933rem;

            flex-shrink: 0;
            margin-left: 55px;
        }

        .customer-details {
            width: 11.61225rem;
            height: 3.89913rem;
            flex-shrink: 0;

            color: #1E1E1E;
            font-size: 0.625rem;
            font-family: Poppins;
            font-style: normal;
            font-weight: 500;
            line-height: normal;
        }

        .customer-details p {
            display: flex;
            width: 11.61225rem;
            height: 0.78725rem;
            flex-direction: column;
            flex-shrink: 0;
            margin-top: 0.1rem;
            margin-bottom: 0;
        }

        .receipt-type {
            display: flex;
            width: 19.58875rem;
            height: 1.625rem;
            flex-direction: column;
            flex-shrink: 0;
            text-align: center;
            margin: auto;
            margin-top: 0.2rem;

            color: #1E1E1E;
            font-size: 1.25rem;
            font-family: Poppins;
            font-style: normal;
            font-weight: 500;
            line-height: normal;
        }

        .receipt-details {
            width: 11.61225rem;
            flex-shrink: 0;

            color: #1E1E1E;
            font-size: 0.625rem;
            font-family: Poppins;
            font-style: normal;
            font-weight: 400;
            line-height: normal;
        }

        .receipt-details p {
            display: flex;
            width: 11.61225rem;
            height: 0.78725rem;
            flex-direction: column;
            flex-shrink: 0;
            margin-top: 0.2rem;
            margin-bottom: 0;
        }


        .cart-table {
            position: relative;
            left: -1rem;
            width: 50.27000rem;
            height: 14.56863rem;
            border: 0.05rem solid #1E1E1E;

            margin-top: 0.75rem;
        }

        .cart-table thead th {
            color: #000;
            font-size: 0.75rem;
            font-family: Poppins;
            font-style: normal;
            font-weight: 600;
            line-height: normal;
            margin: auto;

            border: 0.05rem solid #1E1E1E;
        }

        .cart-table tbody td {
            border-left: 1px solid #000;
            border-right: 1px solid #000;
            border-top: none !important;

            color: #000;
            font-size: 0.625rem;
            font-family: Poppins;
            font-style: normal;
            font-weight: 400;
            line-height: 0.875rem;
            text-transform: uppercase;
        }

        .footer-gst-distribution {
            position: relative;
            left: -1rem;
            width: 25.03875rem;

            color: #000;
            font-size: 0.625rem;
            font-family: Poppins;
            font-style: normal;
            font-weight: 400;
            line-height: 0.875rem;
            text-transform: uppercase;
        }

        .footer-gst-distribution thead th {
            color: #000;
            line-height: normal;
            margin: auto;
            border: 0.05rem solid #1E1E1E;
        }

        .footer-gst-distribution tbody td {
            border: 1px solid #000;
            color: #000;
            font-size: 0.625rem;
            font-family: Poppins;
            font-style: normal;
            font-weight: 400;
            line-height: 0.875rem;
            text-transform: uppercase;
            padding-right: 0rem;
        }

        .footer-1 {
            position: relative;
            left: -1.05rem;
            top: -0.05rem;
            width: 20.9rem;
            height: 10.15rem;
            border: 0.05rem solid #1E1E1E;

            color: #000;
            font-size: 0.75rem;
            font-family: Poppins;
            font-style: normal;
        }

        .receipt-msg {
            border-bottom: 0.05rem solid #1E1E1E;
            height: 1.5rem;
            font-weight: 300;
            line-height: normal;
            margin-bottom: 0rem;
        }

        .receipt-msg p {
            margin-left: 0.47rem;
        }

        .receipt-tnc {
            font-weight: 600;
            line-height: normal;
            text-decoration-line: underline;
            margin-left: 0.34rem;
            margin-top: 0.47rem;

            height: 5.95rem;
        }

        .receipt-sign {
            border-top: 0.05rem solid #1E1E1E;
            width: 9.03875rem;
            font-weight: 600;
            line-height: normal;
            text-align: center;

            margin-left: auto;
            margin-bottom: 1rem;
        }

        .footer-2 {
            width: 19.25rem;
            height: 10.15rem;

            color: #000;
            font-size: 0.75rem;
            font-family: Poppins;
            font-style: normal;
        }

        .cart-summary {
            height: 7.32rem;
            font-size: 1rem;
            border-bottom: 0.05rem solid #1E1E1E;
        }

        .cart-summary .label {
            font-weight: 600;
        }

        .cart-total {
            font-size: 1rem;
            font-weight: 600;
        }

        .line-1 {
            left: -1rem;
            width: 48.11925rem;
            height: 0rem;
            flex-shrink: 0;
            color: #1E1E1E;
            margin: 0.15rem 0rem 0.2rem 0rem;
        }

        .watermark-receipt {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: rgba(255, 0, 0, 0.3);
            font-size: 5rem;
            z-index: 2;
            pointer-events: none;
        }
    </style>

</head>

<body class="d-flex justify-content-center">
    <div class="frame1" id="html-content">
        <div class="container-receipt">
            <div class="watermark-receipt"
                style="display:<%= data.debitNoteDetails.debit_status === 'cancelled' ? 'block' : 'none' %>">CANCELLED
            </div>
            <div class="d-flex justify-content-between">
                <div>
                    <div class="shop-name orgname">
                        <%= data.orgDetails.org_name %>
                    </div>
                    <div class="shop-info d-flex justify-content-between">
                        <div class="shop-info-child1 orgaddress">
                            <%= data.orgDetails.org_address %><br>
                                <%= data.orgDetails.org_city %> (<%= data.orgDetails.org_state %>), <%=
                                            data.orgDetails.org_pincode %><br>
                                            <%= data.orgDetails.org_telephone %>
                        </div>
                        <div class="shop-info-child2" style="width: 41vw;">
                            <p class="my-0 dlno1">DL No 1: <%= data.orgDetails.org_dl_no_1 || 'NA' %>
                            </p>
                            <p class="my-0 dlno2">DL No 2: <%= data.orgDetails.org_dl_no_2 || 'NA' %>
                            </p>
                            <p class="my-0 flno">FSSAI : <%= data.orgDetails.org_fssai_no || 'NA' %>
                            </p>
                            <p class="my-0 gstin">GSTIN : <%= data.orgDetails.org_gstin || 'NA' %>
                            </p>
                        </div>
                    </div>

                </div>
                <div class="logo-container">
                    <img src="/images/logo.svg" alt="Dawa.ai Logo"></img>
                </div>
            </div>
            <hr class="line-1">
            <div class="receipt-type">
                Debit Note
            </div>
            <div class="d-flex justify-content-between">
                <div class="customer-details">
                    <p style="font-weight: 600;" class="vendorname">
                        Distributor: <%= data.vendorDetails.vendor_name %>
                    </p>
                    <p class="vendormobile">
                        Mobile: <%= data.vendorDetails.vendor_contact %>
                    </p>
                    <p class="vendoremail">
                        Email: <%= data.vendorDetails.vendor_email %>
                    </p>
                    <p class="vendoradd">
                        Address: <%= data.vendorDetails.vendor_address %>
                    </p>
                </div>
                <div class="receipt-details">
                    <p class="vendorgst">
                        GSTIN: <%= data.vendorDetails.vendor_gstin %>
                    </p>
                    <p class="vendordl1">
                        D.L.no.: <%= data.vendorDetails.vendor_dl_no_1 %>
                    </p>
                    <p class="vendordl2">
                        D.L.no.: <%= data.vendorDetails.vendor_dl_no_2 %>
                    </p>
                    <p class="vendorFssai">
                        FSSAI: <%= data.vendorDetails.vendor_fssai %>
                    </p>
                </div>
                <div class="receipt-details">
                    <p class="orderdate">
                        Invoice Date: <%= new Date(data.debitNoteDetails.created_date).toLocaleDateString('en-US', {
                            year: 'numeric' , month: 'long' , day: 'numeric' }) %>
                    </p>
                    <p class="crno">
                        Debit No.: <%= data.debitNoteDetails.debit_invoice_id %>
                    </p>
                </div>

            </div>
            <table class="cart-table text-center">
                <thead>
                    <tr>
                        <th style="width: 2.27rem;">S.N.</th>
                        <th style="width: 11.29rem;">Item</th>
                        <th style="width: 4.4rem;">Batch</th>
                        <th style="width: 4.59rem;">HSN</th>
                        <th style="width: 3.61rem;">GST%</th>
                        <th style="width: 3.25rem;">Expiry</th>
                        <th style="width: 3.62rem;">MRP(₹)</th>
                        <th style="width: 3.1rem;">QTY</th>
                        <th style="width: 3.62rem;">PTR(₹)</th>
                        <th style="width: 3.61rem;">Gross Value(₹)</th>
                    </tr>
                </thead>
                <tbody class="cartitems">
                    <% data.debitNoteItems.forEach(function(item, index) { 
                        const grossValue = item.pri_unit_debit * item.purchase_rate + (item.purchase_rate / item.conversion) * item.sec_unit_debit; %>
                        <tr>
                            <td style="width: 2.27rem; height: 1rem;">
                                <%= index + 1 %>
                            </td>
                            <td style="width: 11.29rem; height: 1rem;">
                                <%= item.med_name %>
                            </td>
                            <td style="width: 4.4rem; height: 1rem;">
                                <%= item.batch_name %>
                            </td>
                            <td style="width: 4.59rem; height: 1rem;">
                                <%= item.hsn %>
                            </td>
                            <td style="width: 3.61rem; height: 1rem;">
                                <%= item.gst %>
                            </td>
                            <td style="width: 3.25rem; height: 1rem;">
                                <%= new Date(item.exp_date).toLocaleDateString('en-US', { month: '2-digit' ,
                                    year: 'numeric' }) %>
                            </td>
                            <td style="width: 3.62rem; height: 1rem;">
                                <%= item.mrp %>
                            </td>
                            <td style="width: 3.1rem; height: 1rem;">
                                <%= item.pri_unit_debit %>:<%= item.sec_unit_debit %>
                            </td>
                            <td style="width: 3.62rem; height: 1rem;">
                                <%= item.purchase %>
                            </td>
                            <td style="width: 3.61rem; height: 1rem;">
                                <%= grossValue.toFixed(2) %>
                            </td>
                        </tr>
                        <% }); %>

                </tbody>
            </table>
            <div class="d-flex flex-row">
                <table class="footer-gst-distribution text-center">
                    <thead>
                        <tr>
                            <th>GST%</th>
                            <th>Taxable Amt</th>
                            <th>CGST</th>
                            <th>SGST</th>
                            <th>Total GST</th>
                        </tr>
                    </thead>
                    <tbody class="p-0">
                        <% [0, 5, 12, 18].forEach(gstRate=> { %>
                            <tr>
                                <td>
                                    <%= gstRate %>%
                                </td>
                                <td class="taxAmt<%= gstRate %>">
                                    <%= parseFloat(data.gstBreakup[gstRate].taxAmt).toFixed(2) %>
                                </td>
                                <td class="cgst-<%= gstRate %>">
                                    <%= parseFloat(data.gstBreakup[gstRate].cgst).toFixed(2) %>
                                </td>
                                <td class="sgst-<%= gstRate %>">
                                    <%= parseFloat(data.gstBreakup[gstRate].sgst).toFixed(2) %>
                                </td>
                                <td class="totalGst<%= gstRate %>">
                                    <%= parseFloat(data.gstBreakup[gstRate].totalGst).toFixed(2) %>
                                </td>
                            </tr>
                            <% }); %>
                            <tr>
                                <td>Total</td>
                                <td class="taxAmtTotal">
                                    <%= parseFloat(data.gstBreakup.total.taxAmt).toFixed(2) %>
                                </td>
                                <td class="cgstTotal">
                                    <%= parseFloat(data.gstBreakup.total.cgst).toFixed(2) %>
                                </td>
                                <td class="sgstTotal">
                                    <%= parseFloat(data.gstBreakup.total.sgst).toFixed(2) %>
                                </td>
                                <td class="totalGst">
                                    <%= parseFloat(data.gstBreakup.total.totalGst).toFixed(2) %>
                                </td>
                            </tr>
                    </tbody>
                </table>
                <div class="footer-1">
                    <div class="receipt-msg">
                        <p id="NumberOfItems">
                            No of Items: <%= data.debitNoteItems.length %>
                        </p>
                    </div>
                    <div class="receipt-info">
                        <div class="receipt-tnc">

                        </div>
                        <div class="receipt-sign">
                            Authorised Signature
                        </div>

                    </div>
                </div>
                <div class="footer-2">
                    <div class="cart-summary">
                        <div class="d-flex justify-content-between">
                            <div class="label">
                                Total Gross(₹):
                            </div>
                            <div class="totalGross">
                                <%= data.totalGross.toFixed(2) %>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div class="label">
                                Less Discount(₹):
                            </div>
                            <div class="lessDiscount">
                                <%= data.debitNoteDetails.less_discount.toFixed(2) %>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div class="label">
                                Add CGST:
                            </div>
                            <div class="cgst">
                                <%= data.gstBreakup.total.cgst.toFixed(2) %>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div class="label">
                                Add SGST:
                            </div>
                            <div class="sgst">
                                <%= data.gstBreakup.total.sgst.toFixed(2) %>
                            </div>
                        </div>
                    </div>
                    <hr class="line-1">
                    <div class="cart-total">
                        <div class="d-flex justify-content-between my-2">
                            <div>
                                Total Amount(₹):
                            </div>
                            <div class="totalamount">
                                <%= data.totalAmount.toFixed(2) %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>

</html>